
//Code the equation z = 2x - 3y . Find the value of z when the values of x are = 0,1,2,3 
//and the value of y is a constant = 2.

#include <stdio.h>

int
equation (int x, int y)
{

  int z = 2 * x - 3 * y;
  return z;

}

int
main ()
{

  int x[4] = { 0, 1, 2, 3 };

  for (int i = 0; i < 4; i++)
    {
      int z = equation (x[i], 2);

      printf ("z = %d \n", z);

    }

  return 0;
}
